<UserControl x:Class="WPF_46731r.Views.ComputerView.Details.ComputerDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border
            BorderThickness="1"
            CornerRadius="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/comp1.jfif" />
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#7678ed" />
            </Border.BorderBrush>
            <Border Grid.Column="2"
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1.,0" EndPoint="0,1" Opacity="0.92">
                        <GradientStop Offset="0.4" Color="#ee6123" />
                        <GradientStop Offset="0.9" Color="#800f2f" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Margin="10,10,0,0">
                        <TextBlock
                        Margin="5,10,0,0"
                        FontFamily="Montserrat"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Computer.HostName, StringFormat=HostName :{0}}" />

                        <TextBlock
                        Margin="5,10,0,0"
                        FontFamily="Montserrat"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Computer.Mac, StringFormat=MAC :{0}}" />

                        <TextBlock
                        Margin="5,10,0,0"
                        FontFamily="Montserrat"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Computer.InventoryNumber, StringFormat=Inventory number :{0}}" />

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                            Margin="5,10,0,0"
                            FontFamily="Montserrat"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding Computer.LastChecked.checkedOn, StringFormat=Checked On :{0}}" />

                            <TextBlock
                            Margin="30,10,0,0"
                            FontFamily="Montserrat"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding Computer.LastChecked.CheckedBy, StringFormat=Checked By :{0}}" />

                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                            Margin="5,10,0,0"
                            FontFamily="Montserrat"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding Computer.LastModified.CheckedOn, StringFormat=Modified On :{0}}" />

                            <TextBlock
                            Margin="30,10,0,0"
                            FontFamily="Montserrat"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding Computer.LastModified.CheckedBy, StringFormat=Checked By :{0}}" />
                        </StackPanel>


                        <TextBlock
                        Margin="5,10,0,0"
                        FontFamily="Montserrat"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Computer.State, StringFormat=State :{0}}" />

                        <Expander
                        Margin="5,10,0,0"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        ExpandDirection="Down"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="White"
                        Header="Characteristics"
                        IsExpanded="False">

                            <StackPanel>
                                <TextBlock
                                Margin="40,10,0,0"
                                FontFamily="Montserrat"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding Computer.Characteristics.Processor, StringFormat=Processor :{0}}" />

                                <TextBlock
                                Margin="40,10,0,0"
                                FontFamily="Montserrat"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding Computer.Characteristics.Ram, StringFormat=RAM :{0}}" />

                                <TextBlock
                                Margin="40,10,0,0"
                                FontFamily="Montserrat"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding Computer.Characteristics.MotherBoard, StringFormat=MotherBoard :{0}}" />

                                <TextBlock
                                Margin="40,10,0,0"
                                FontFamily="Montserrat"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding Computer.Characteristics.Storage, StringFormat=Storage :{0}}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                    <DockPanel Grid.Row="1">
                        <Button
                            Margin="20,0,0,0"
                        BorderThickness="0"
                        Command="{Binding Update}"
                            CommandParameter="{Binding Computer}"
                        Content="Update"
                        Cursor="Hand"
                        FontFamily="Montserrat"
                        FontSize="12"
                        Foreground="Wheat"
                        HorizontalAlignment="left">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#3a86ff" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1982c4" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border
                                    Width="150"
                                    Height="40"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button
                            Margin="0,0,20,0"
                            BorderThickness="0"
                            Command="{Binding Delete}"
                            Content="Delete"
                            Cursor="Hand"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Foreground="Wheat"
                            HorizontalAlignment="Right">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#bd0909" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#800a0a" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border
                                        Width="150"
                                        Height="40"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DockPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
